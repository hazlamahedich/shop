#!/bin/bash
# BMad to Beads - Quick wrapper script
# Converts BMad Method sprint status to Beads tasks

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PYTHON_SCRIPT="$SCRIPT_DIR/bmad_to_beads.py"

# Check if Python script exists
if [[ ! -f "$PYTHON_SCRIPT" ]]; then
    echo "Error: bmad_to_beads.py not found at $PYTHON_SCRIPT"
    exit 1
fi

# Run the Python script with all arguments
python3 "$PYTHON_SCRIPT" "$@"
