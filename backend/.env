# Backend Environment Configuration
# Copy this file to .env and fill in your values

# Testing Mode (forces mock services, prevents API costs)
IS_TESTING=false

# Application Settings
APP_NAME=shop-backend
APP_VERSION=0.1.0
DEBUG=true

# Security (REQUIRED in production - generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=dev-secret-key-for-testing-DO-NOT-USE-IN-PRODUCTION

# Database (PostgreSQL)
# Note: For testing, create database first: createdb shop_dev -U developer
DATABASE_URL=postgresql+asyncpg://developer:developer@localhost:5432/shop_dev
DATABASE_ECHO=false

# Test Database (MUST be separate from DATABASE_URL to prevent data loss!)
# Create with: createdb -U developer shop_test
TEST_DATABASE_URL=postgresql+asyncpg://developer:developer@localhost:5432/shop_test

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
WEBHOOK_SECRET=webhook-secret-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Shopify (configure during onboarding)
SHOPIFY_STORE_URL=
SHOPIFY_STOREFRONT_TOKEN=
SHOPIFY_API_VERSION=2024-01

# Facebook Messenger (configure during onboarding)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_API_VERSION=v19.0
FACEBOOK_REDIRECT_URI=https://your-domain.com/api/integrations/facebook/callback
FACEBOOK_WEBHOOK_VERIFY_TOKEN=
# Legacy aliases (kept for compatibility)
FACEBOOK_PAGE_ID=
FACEBOOK_PAGE_ACCESS_TOKEN=
FACEBOOK_VERIFY_TOKEN=verify_token

# LLM Provider (configure during onboarding)
LLM_PROVIDER=mock
LLM_API_KEY=dummy
LLM_API_BASE=
LLM_MODEL=mock-model
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,https://volare-sun.myshopify.com,https://nil-soil-psychological-curtis.trycloudflare.com

